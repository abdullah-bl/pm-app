---
interface Props {
	columns?: 2 | 3 | 4;
	secondary?: boolean;
}

const { columns = 3, secondary = false } = Astro.props;

const gridClass = {
	2: "grid-cols-1 md:grid-cols-2",
	3: "grid-cols-1 md:grid-cols-3",
	4: "grid-cols-2 md:grid-cols-4",
}[columns];
---

<div
	class:list={[
		"grid gap-8 md:gap-12",
		gridClass,
		secondary && "pt-8 border-t border-border",
	]}
>
	<slot />
</div>
